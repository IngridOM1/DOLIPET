@model appPetech.Models.Delivery
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Pedidos";

    if (SignInManager.IsSignedIn(User))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}
<div class="container">
<h1>ELIMINAR</h1>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
         NOMBRE:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
           APELLIDO PATERNO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoPaterno)
        </dd>
        <dt class = "col-sm-2">
          APELLIDO MATERNO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoMaterno)
        </dd>
        <dt class = "col-sm-2">
            DNI:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
         <dt class = "col-sm-2">
           CELULAR:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Celular)
        </dd>
        <dt class = "col-sm-2">
           VEHICULO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehiculo)
        </dd>
        <dt class = "col-sm-2">
            PLACA DEL VEHICULO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
        <input type="submit" value="ELIMINAR" class="btn btn-primary" /> 
        </div>
       <br>
        <a class="btn btn-primary" asp-action="Index">VOLVER</a>
    </form>
</div>
</div>
