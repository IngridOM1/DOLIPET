@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Styles {
    <link href="~/css/register.css" rel="stylesheet" />
}

<br>
<div class="container" id="container">
	<div class="form-container sign-in-container">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h1>CREAR UNA CUENTA</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your account</span>
			<input asp-for="Input.Email" class="form-label" placeholder="Name"></label>
			<input asp-for="Input.Password" class="form-label" placeholder="Password" asp-validation-for="Input.Password"></label>
            <input asp-for="Input.ConfirmPassword" asp-validation-for="Input.ConfirmPassword" placeholder="Confirmar Contraseña"></label>
			<button id="registerSubmit" type="submit" >Registrarse</button>

         
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
			</div>
		</div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
