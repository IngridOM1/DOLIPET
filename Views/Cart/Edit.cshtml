@model appPetech.Models.Cart

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">EDITAR CANTIDAD DE MI PRODUCTO</h1>
            <hr />

            <form asp-controller="Cart" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="Precio" />

                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary" style="background-color: #ED981D; border-color: #ED981D;" />
                </div>
            </form>
            <br>
            <div class="text-center">
                <a asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
