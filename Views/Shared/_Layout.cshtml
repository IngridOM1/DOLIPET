<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - appPetech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appPetech.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,0" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>





    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
 <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom navBar">
            <div class="container-fluid navBar_handler">
                <a class="navbar-brand navBar_logoHandler" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="navBar_img" src="~/imagenes/PETECHLOGO.png"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between handler_linksContainer">
                    <div class="navbar-nav flex-grow-1 navBar_navItemContainer">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="material-symbols-outlined">home</span></a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Nutricion">
                                <span class="material-symbols-outlined">web</span> 
                            </a>
                        </li>

                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Promociones" asp-action="Promos"><span style="color: white;">PROMOCIONES</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index"><span style="color: white;">CONTACTO</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogo" asp-action="Index"><span style="color: white;">CATALOGO</span></a>
                        </li>  
                    </div>

                    <div><partial name="_LoginPartial" class="authSection" /></div>

                </div>
            </div>
        </nav>
    </header>
    <main role="main">
            @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/bootstrap-icons.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
