@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "ADMIN PAGE";

    if(SignInManager.IsSignedIn(User)){
       Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}

@section Styles {
    <link href="~/css/admin.css" rel="stylesheet" />
}

    <style>
    
    .btn-warning {

        border-radius: 40px;
 
    }
    
    </style>

<section class="SectionModule">

    <div class="IndexHeader">
        <div class="IndexHeader_Message">
            <h1 class="IndexHeader_h1">Bienvenido Admin @User.Identity?.Name!</h1>
            <span>Aqui tienes tus funcionalidades listas para usarse</span>
        </div>       
        <img class="IndexHeader_img" src="~/imagenes/adminTools.svg">
    </div>
 
    <div class="OptionHandler">

        <div class="OptionModule">
            <img  class="OptionModule_imgContainer" src="~/imagenes/RegistrarProductoImg.png" />
            <a class="OptionModule_btnRegistrarProducto" asp-controller="Producto" asp-action="Create">Empezar</a> 
        </div>
        
        <div class="OptionModule">
            <img  class="OptionModule_imgContainer" src="~/imagenes/DeliveryImg.png" />
            <a class="OptionModule_btnDelivery" asp-area=""  asp-controller="Delivery" asp-action="Index">Empezar</a> 
        </div>

        <div class="OptionModule">
            <img  class="OptionModule_imgContainer" src="~/imagenes/DeliveryImg.png" />
            <a class="OptionModule_btnDelivery" asp-area="" asp-controller="Pedido" asp-action="Index">Empezar</a> 
        </div>

    </div>
</section>
