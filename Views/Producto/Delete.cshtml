@model appPetech.Models.Producto
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "ADMIN PAGE";

    if(SignInManager.IsSignedIn(User)){
       Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}


<div class="container">

<h1>ELIMINAR</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            NOMBRE:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            DESCRIPCION:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            PRECIO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
          PORCENTAJE DE DESCUENTO:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PorcentajeDescuento)
        </dd>
        <dt class = "col-sm-2">
            IMAGEN DEL PRODUCTO:
        </dt>
        <dd class = "col-sm-10">
            <img  class="img-responsive" width="150px" height="150px" src="/imagenes/@Html.DisplayFor(model => model.ImageName)" alt="">
        </dd>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
        <input class="btn btn-primary" type="submit" value="ELIMINAR" class="btn btn-danger" /> 
        </div>
        <br>
        <a class="btn btn-primary" asp-action="Index">VOLVER</a>
    </form>
</div>

</div>