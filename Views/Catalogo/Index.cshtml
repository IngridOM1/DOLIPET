@model IEnumerable<appPetech.Models.Producto>

@{
    ViewData["Title"] = "Catalogo";
}
<br>
    <div class="container">
        <h1>@ViewData["Message"]</h1>
        <div class="row">
            <div class="col">
                <div id="products" class="mb-3">
                    <div class="row">
                        @foreach (var item in Model){
                            <div class="col-sm-4">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="card-img-actions">
                                            <img  class="card-img-top" src="imagenes/@item.ImageName" alt="@item.ImageName width="250" height="250">
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                        <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Precio)</p>
                                        <a class="btn btn-primary" style="background-color: #ED981D; border: 1px solid #ED981D;"
                                            asp-action="Add" asp-route-id="@item.Id">
                                            <span class="material-symbols-outlined" style="vertical-align: middle;">
                                                shopping_cart
                                            </span>
                                            Añadir
                                            </a>
                                        <a class="btn btn-info" style="background-color: #FAD7A5; border: 1px solid #FAD7A5;" asp-action="Details" asp-route-id="@item.Id">Ver más </a>
                                    </div>
                                </div>
                            </div> 
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
 
